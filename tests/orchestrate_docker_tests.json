{
  "test_suite": "OrchestrateOS Docker Installation Validation",
  "ngrok_url": "https://supposedly-faithful-termite.ngrok-free.app",
  "tests": [
    {
      "name": "health_check",
      "description": "Verify Docker container is running and accessible",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "system_settings",
        "action": "health_check",
        "params": {}
      },
      "expected_status": "success",
      "critical": true
    },
    {
      "name": "list_available_tools",
      "description": "Get all available tools from system_settings",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "system_settings",
        "action": "list_tools",
        "params": {}
      },
      "expected_status": "success",
      "critical": true
    },
    {
      "name": "json_manager_create",
      "description": "Test json_manager create operation",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "json_manager",
        "action": "create",
        "params": {
          "file_path": "/tmp/test_data.json",
          "initial_data": {"test": "data", "timestamp": "2025-11-08"}
        }
      },
      "expected_status": "success",
      "critical": false
    },
    {
      "name": "json_manager_read",
      "description": "Test json_manager read operation",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "json_manager",
        "action": "read",
        "params": {
          "file_path": "/tmp/test_data.json"
        }
      },
      "expected_status": "success",
      "expected_contains": "test",
      "critical": false
    },
    {
      "name": "json_manager_update",
      "description": "Test json_manager update operation",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "json_manager",
        "action": "update",
        "params": {
          "file_path": "/tmp/test_data.json",
          "updates": {"new_field": "updated_value"}
        }
      },
      "expected_status": "success",
      "critical": false
    },
    {
      "name": "outline_editor_search",
      "description": "Test Outline search (requires API key configured)",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "outline_editor",
        "action": "search_docs",
        "params": {
          "query": "test",
          "limit": 5,
          "offset": 0
        }
      },
      "expected_status": "success",
      "critical": false,
      "skip_if_missing_credentials": true
    },
    {
      "name": "unlock_tool_check_status",
      "description": "Check unlock status for a tool",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "system_settings",
        "action": "get_tool_status",
        "params": {
          "tool_name": "outline_editor"
        }
      },
      "expected_status": "success",
      "critical": false
    },
    {
      "name": "file_manager_create",
      "description": "Test file_manager create file operation",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "file_manager",
        "action": "create_file",
        "params": {
          "file_path": "/tmp/test_file.txt",
          "content": "Automated test file created"
        }
      },
      "expected_status": "success",
      "critical": false
    },
    {
      "name": "file_manager_read",
      "description": "Test file_manager read file operation",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "file_manager",
        "action": "read_file",
        "params": {
          "file_path": "/tmp/test_file.txt"
        }
      },
      "expected_status": "success",
      "expected_contains": "Automated test",
      "critical": false
    },
    {
      "name": "claude_assistant_queue_check",
      "description": "Verify claude_assistant task queue exists and is accessible",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "file_manager",
        "action": "check_exists",
        "params": {
          "file_path": "/orchestrate_user/claude_task_queue.json"
        }
      },
      "expected_status": "success",
      "critical": true
    },
    {
      "name": "execution_context_loaded",
      "description": "Verify execution_context.json is loaded and accessible",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "json_manager",
        "action": "read",
        "params": {
          "file_path": "/opt/orchestrate-core-runtime/data/execution_context.json"
        }
      },
      "expected_status": "success",
      "expected_contains": "collection_ids",
      "critical": true
    },
    {
      "name": "system_settings_ndjson_valid",
      "description": "Verify system_settings.ndjson is valid and readable",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "system_settings",
        "action": "list_tools",
        "params": {}
      },
      "expected_status": "success",
      "critical": true
    }
  ],
  "cleanup": [
    {
      "description": "Remove test files",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "file_manager",
        "action": "delete_file",
        "params": {
          "file_path": "/tmp/test_data.json"
        }
      }
    },
    {
      "description": "Remove test file",
      "endpoint": "/execute_task",
      "payload": {
        "tool_name": "file_manager",
        "action": "delete_file",
        "params": {
          "file_path": "/tmp/test_file.txt"
        }
      }
    }
  ]
}
